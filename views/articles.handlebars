<div class="container">
  {{#each articles}}
    <div class="row">
      <div class="col s12 m12">
        <div data-article-id={{_id}} class="card orange lighten-4">
          <div class="card-content white-text">
            <a target="_blank" href={{link}}><span class="card-title">{{headline}}</span></a>
          </div>
          <ul class="collapsible orange lighten-5" data-collapsible="accordion">
            <li>
              <div class="collapsible-header"><i class="material-icons">filter_drama</i>Comments</div>
              <div class="collapsible-body">
                {{#if comments}}
                  <ul class="collection">
                  {{#each comments}}
                    <li class="collection-item" style="overflow: auto;"><strong>Someone wrote:</strong> {{contents}}  <a data-comment-id={{_id}} class="del-comment-btn btn-floating btn-small waves-effect waves-light red" style="float: right"><i class="material-icons">delete</i></a></li>
                  {{/each}}
                  </ul>
                {{else}}
                  <span>No comments yet! Leave one below</span>
                {{/if}}
                <div class="row">
                  <form class="col s12">
                    <div class="row">
                      <div class="input-field col s12">
                        <textarea id="commentField{{_id}}" class="materialize-textarea"></textarea>
                        <label for="textarea1">New Comment</label>
                      </div>
                    </div>
                    <button id="commentButton{{_id}}" class="comment-sub-btn btn waves-effect waves-light" type="submit" name="action">Submit
                      <i class="material-icons right">send</i>
                    </button>
                  </form>
                </div>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  {{/each}}
</div>
<script src="assets/logic/articles.js" type="text/javascript"></script>
